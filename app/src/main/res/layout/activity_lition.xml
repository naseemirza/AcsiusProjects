<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolor"
    tools:context="acsiustech.wolaapp.Lititon.LitionActivity">

    <ScrollView
        android:id="@+id/scrolview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

        <RelativeLayout
            android:id="@+id/hmslider"
            android:layout_width="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/litionbaner" />

            <!--<TextView-->
                <!--android:id="@+id/textView4"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--android:layout_alignParentStart="true"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:layout_marginStart="20dp"-->
                <!--android:textSize="18sp"-->
                <!--android:textStyle="bold"-->
                <!--android:text="LITITON"-->
                <!--android:textColor="@color/colorWhite"/>-->


        </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/desccard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hmslider"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Description"
                android:padding="10dp"
                android:textColor="@color/colorBlack"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical">

                    <ImageView
                        android:id="@+id/arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_chevron_right_black_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp" />

                    <ImageView
                        android:id="@+id/arrow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:visibility="gone"
                        android:src="@drawable/ic_expand_more_black_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp" />

                </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textViewDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/descrp"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:textColor="@color/colorBlack"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/liftch"
                android:layout_below="@+id/desccard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/ftcdsgn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Featured Designs"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/vwall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View All >"
                    android:layout_marginEnd="20dp"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_below="@id/liftch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"/>

        </RelativeLayout>

    </ScrollView>

    <!--<include-->
        <!--android:id="@+id/footr"-->
        <!--layout="@layout/footerbar" />-->


</RelativeLayout>
